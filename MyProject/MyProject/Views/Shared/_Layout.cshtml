<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyProject.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            background-color: #007BFF; /* Синий фон */
            color: white; /* Белый текст */
            padding: 10px;
            height: 100vh; /* Полная высота окна */
            overflow-y: auto; /* Прокрутка, если список длинный */
        }
        .sidebar a {
            color: white;
            text-decoration: none;
        }
        .sidebar a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">ГРНРМ</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MainPage">Таблицы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Настройка</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Левый блок (синяя боковая панель) -->
            <aside class="col-md-3 sidebar">
                <h5>Устройства</h5>
                @if (ViewBag.Devices != null && ((List<string>)ViewBag.Devices).Any())
                {
                    <ul>
                        @foreach (var device in ViewBag.Devices as List<string>)
                        {
                            <li><a asp-controller="Device" asp-action="Details" asp-route-id="@device">@device</a></li>
                        }
                    </ul>
                }
                else
                {
                    <p>Нет доступных устройств.</p>
                }
            </aside>
            <!-- Основной контент -->
            <main role="main" class="col-md-9 pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MyProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
