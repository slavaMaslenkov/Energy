<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="MainPage">
                    <i class="bi bi-building" style="cursor: pointer; font-size: 24px;"></i>
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#000000A6" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Справочники</a>
                            <ul class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="EquipmentEntities" asp-action="Index">Устройства</a>
                                <a class="dropdown-item" asp-area="" asp-controller="SubsystemEntities" asp-action="Index">Подсистемы</a>
                                <a class="dropdown-item" asp-area="" asp-controller="PlantEntities" asp-action="Index">Станции</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ParametersEntities" asp-action="Index">Параметры</a>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SampleEntities" asp-action="Index">Шаблоны</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="UserEntities" asp-action="Index">Пользователи</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#000000A6" id="userDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person" style="font-size: 24px;"></i> @ViewBag.UserName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="z-index: 1050;">
                                <li class="dropdown-item">@ViewBag.PersonSurname @ViewBag.PersonName @ViewBag.PersonPatronymic</li>
                                <li><a class="dropdown-item" 
                                    asp-area="" 
                                    asp-controller="UserEntities" 
                                    asp-route-userId=@ViewBag.UserId 
                                    asp-action="ChangePassword">Изменить пароль</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="Logout">Выход</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Левый блок (синяя боковая панель) -->
            <aside class="col-md-3 sidebar">
                <h5>Перечень</h5>
                @if (ViewBag.Plants != null && ((List<SelectListItem>)ViewBag.Plants).Any())
                {
                    <ul id="plant-list" style="list-style-type: none;">
                        @foreach (var plant in (List<SelectListItem>)ViewBag.Plants)
                        {
                            <li style="margin-bottom: 10px;">
                                <span class="station-item" data-plant-id="@plant.Value" style="cursor: pointer;">
                                    <i class="bi bi-caret-down-fill me-2"></i>@plant.Text
                                </span>
                                <ul class="equipment-list" style="display: none; list-style-type: none; margin-left: 20px;"></ul>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Нет доступных станций.</p>
                }
            </aside>
            <!-- Основной контент -->
            <main role="main" class="col-md-9 pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ГРАРМ
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Hierarchy.js?v=@DateTime.Now.Ticks"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
