<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand">ГРНРМ</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#000000A6" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Справочники</a>
                            <ul class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="EquipmentEntities" asp-action="Index">Устройства</a>
                                <a class="dropdown-item" asp-area="" asp-controller="SubsystemEntities" asp-action="Index">Подсистемы</a>
                                <a class="dropdown-item" asp-area="" asp-controller="PlantEntities" asp-action="Index">Станции</a>
                                <a class="dropdown-item" asp-area="" asp-controller="ParametersEntities" asp-action="Index">Параметры</a>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SampleEntities" asp-action="Index">Шаблоны</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Настройка</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Левый блок (синяя боковая панель) -->
            <aside class="col-md-3 sidebar">
                <h5>Перечень</h5>
                @if (ViewBag.Plants != null && ((List<dynamic>)ViewBag.Plants).Any())
                {
                    <ul class="list-group">
                        @foreach (var plant in ViewBag.Plants as List<dynamic>)
                        {
                            <li class="list-group-item">
                                <ul class="list-group ms-3">
                                    @foreach (var equipment in plant.Equipment)
                                    {
                                        <li class="list-group-item">
                                            <!-- Кнопка для раскрытия устройства -->
                                            <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#equipment-@equipment.EquipmentName" aria-expanded="false" aria-controls="equipment-@equipment.EquipmentName">
                                                @equipment.EquipmentName
                                            </button>
                                            <!-- Список подсистем для устройства -->
                                            <div id="equipment-@equipment.EquipmentName" class="collapse">
                                                <ul class="list-group ms-3">
                                                    @foreach (var subsystem in equipment.Subsystems)
                                                    {
                                                        <li class="list-group-item">@subsystem.SubsystemName</li>
                                                    }
                                                </ul>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Нет доступных данных.</p>
                }
                <a class="btn btn-secondary d-inline-flex align-items-center text-dark" asp-area="" asp-controller="EquipmentEntities" asp-action="Create"
                    style="text-decoration: none;">
                    <i class="bi bi-plus-square me-2"></i> Добавить
                </a>
            </aside>
            <!-- Основной контент -->
            <main role="main" class="col-md-9 pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MyProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
