@model DataAccess.Postgres.Entity.UnityEntity

@{
    ViewData["Title"] = "Добавить";
}

<h2>Добавить параметр в список</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <input type="hidden" name="deviceName" value="@ViewBag.DeviceName" />
            <div class="form-group">
                <label asp-for="SampleID" class="control-label">Шаблон</label>
                @Html.DropDownListFor(
                         model => model.SampleID,
                         (SelectList)ViewBag.SampleList,
                         "Шаблон",
                         new { @class = "form-control" }
                         )
                <span asp-validation-for="SampleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParametersID" class="control-label">Параметр</label>
                @Html.DropDownListFor(
                         model => model.ParametersID,
                         (SelectList)ViewBag.ParametersList,
                         "Параметр",
                         new { @class = "form-control" }
                         )
                <span asp-validation-for="ParametersID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Создать" class="btn btn-secondary d-inline-flex align-items-center text-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
