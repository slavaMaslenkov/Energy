@model IEnumerable<DataAccess.Postgres.Entity.UnityEntity>

@{
    ViewData["Title"] = "Index";
}

<h1 class="d-flex justify-content-between align-items-center">
    Параметры устройства
    <div>
        <a class="btn btn-secondary d-inline-flex align-items-center text-dark me-2"
           asp-action="Create" style="text-decoration: none;">
            <i class="bi bi-plus-square me-2"></i> Добавить
        </a>
        <a id="delete-selected"
           class="btn btn-info d-inline-flex align-items-center text-dark"
           style="text-decoration: none;">
            <i class="bi bi-trash me-2"></i> Удалить
        </a>
    </div>
</h1>
<form asp-action="UpdateValues" method="post">
    <input type="hidden" name="DeviceName" value="@ViewBag.DeviceName" />
    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sample.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Parameters.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Parameters.Measure)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sample.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Parameters.Name)
                    </td>
                    <td class="d-flex justify-content-center">
                        <input type="text"
                               name="Values[@item.Id]"
                               value="@item.Value"
                               class="form-control w-25 text-center" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Parameters.Measure)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-secondary fixed-button">Сохранить</button>
</form>
