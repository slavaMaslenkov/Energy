@model DataAccess.Postgres.Entity.EquipmentEntity

@{
    ViewData["Title"] = "Редактирование устройства";
}

<h1>Редактирование устройства</h1>

<h4>Устройство</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantID" class="control-label">Станция</label>
                @Html.DropDownListFor(
                         model => model.PlantID,
                         (SelectList)ViewBag.PlantList,
                         "Выберете станцию",
                         new { @class = "form-control" }
                         )
                <span asp-validation-for="PlantID" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-secondary">
                    <i class="bi bi-save me-2"></i>Сохранить
                </button>
                <a class="btn btn-info d-inline-flex align-items-center text-dark"
                   asp-action="Index" style="text-decoration: none;">
                    <i class="bi bi-arrow-90deg-left me-2"></i> Назад
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
