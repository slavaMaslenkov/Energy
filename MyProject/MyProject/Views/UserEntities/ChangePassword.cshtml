<h2>Смена пароля</h2>

<div class="row">
    <div class="col-md-4">
        <form id="changePasswordForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="userId" value="@ViewBag.UserId" />
            <div class="form-group">
                <label for="oldPassword" class="control-label">Старый пароль</label>
                <input type="password" id="oldPassword" class="form-control" name="oldPassword" required />
            </div>
            <div class="form-group">
                <label for="newPassword" class="control-label">Новый пароль</label>
                <input type="password" id="newPassword" class="form-control" name="newPassword" required />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Изменить" class="btn btn-secondary d-inline-flex align-items-center text-dark" />
            </div>
            <div id="data-change" data-password-changed="@ViewBag.PasswordChanged"></div>
        </form>
    </div>
</div>

@Html.Partial("ModalChangePassword")

<script src="~/js/ChangePassword.js?v=@DateTime.Now.Ticks"></script>