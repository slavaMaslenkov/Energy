@model DataAccess.Postgres.Entity.SampleEntity

@{
    ViewData["Title"] = "Создание шаблона";
}

<h2>Создать шаблон</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EquipmentID" class="control-label">Устройство</label>
            @Html.DropDownListFor(
                     model => model.EquipmentID,
                     (SelectList)ViewBag.EquipmentList,
                     "Выберете устройство",
                     new { @class = "form-control" }
                     )
            <span asp-validation-for="EquipmentID" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Создать" class="btn btn-secondary d-inline-flex align-items-center text-dark" />
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
